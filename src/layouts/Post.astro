---
const { title, pubDate, description, image, tags } = Astro.props;

// Asegurarnos de que tags siempre sea un array
const tagsArray = Array.isArray(tags) ? tags : tags ? [tags] : [];
---

<section>
  <div class="mx-auto max-w-screen-xl px-4 py-8 sm:px-6 lg:px-8">
    <div class="space-y-4 md:space-y-8">
      <div class="max-w-xl">
        <h2 class="text-2xl font-semibold text-gray-900 sm:text-3xl">
          {title}
        </h2>
        <span class="flex flex-col sm:gap-y-2 md:flex-row md:items-center md:gap-y-0 md:divide-x md:divide-textColor">
            <time class="pr-2">{pubDate}</time>
            {
              tagsArray.map((item: string) => (
                <span class="rounded-full bg-purple-100 px-2.5 py-0.5 text-xs whitespace-nowrap text-purple-600">
                  {item}
                </span>
              ))
            }
          </span>

        <p class="mt-4 text-gray-700">
          {description}
        </p>
      </div>

      <img
        src={image}
          class="rounded"
          alt={title}
      />
    </div>
  </div>
</section>
